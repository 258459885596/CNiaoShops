<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/def_background</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="SearchView">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/gray_toolbar_text_hint</item>
        <item name="android:background">@drawable/selector_search_view</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:textCursorDrawable">@drawable/shape_et_cursor_searchview</item>
        <item name="android:drawableLeft">@mipmap/icon_search</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="CardViewsStyle" parent="CardView">
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="cardCornerRadius">3dp</item>
        <item name="cardElevation">0dp</item>
        <item name="contentPadding">10dp</item>
    </style>

    <style name="VerRecyclerStyle">
        <item name="android:scrollbarSize">3dp</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:scrollbarThumbVertical">@drawable/scrollbar_vertical_thumb</item>
        <item name="android:scrollbars">vertical</item>
    </style>

    <style name="RedCheckBox">
        <item name="android:button">@drawable/selector_cb_red_style</item>
    </style>

    <style name="TransparentTheme" parent="@style/AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="HeaderStyle">
        <item name="android:textSize">@dimen/text_size_big</item>
    </style>

    <style name="ToolbarStyle" parent="@style/WhiteToolbarStyle">
        <item name="android:actionMenuTextAppearance">@style/MenuTextAppearance</item>
    </style>

    <style name="TitleTextAppearance">
        <item name="android:textSize">@dimen/text_size_big</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MenuTextAppearance">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TabTextAppearance">
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>
